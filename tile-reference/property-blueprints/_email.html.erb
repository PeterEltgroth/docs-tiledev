    description: 'This ensures the string value is formatted as an email address.',
    credential: false,
    auto_generatable: false,
    operator_configurable: true,
    allows_default_to_be_specified: true,
    value_accessor_description: 'Returns a string or null.',
    value_present_accessor_description: 'Returns true if value is a non-empty string.',
    additional_property_blueprint_attributes: [],
    
    additional_accessors: [],
    examples: [
      {
        name: 'Example',
        image: {
          name: 'Example Product with Email',
          path: 'img/example-email-tile.png'
        },
        metadata: <<~METADATA,
          property_blueprints:
          - name: example_email
            type: email
            configurable: true

